<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="100dp"
        android:layout_height="110dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#a8b3b5"
        android:src="#a7b3b5"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/img_avatar"
        android:text="@string/name_user"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_marginStart="26dp"
        android:layout_toRightOf="@+id/img_avatar"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="18sp"
        android:text="@string/username_user"/>

    <TextView
        android:id="@+id/flw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_username"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img_avatar"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="@string/follower"/>

    <TextView
        android:id="@+id/txt_user_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_username"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/flw"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="@string/flw"/>

    <TextView
        android:id="@+id/flwing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_username"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/txt_user_follower"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="@string/following"/>

    <TextView
        android:id="@+id/txt_user_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_username"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/flwing"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="@string/flwing"/>
</RelativeLayout>